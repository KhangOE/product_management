@model Product

<div>
    @Model.Name
    <div>
        @Model.Price
    </div>

    <form asp-action="Edit" method="post">
        <div>
            <label class="min-width-800" asp-for="Name">Name</label>
        <input asp-for="Name" value="@Model.Name" type="text" name="Name" />
        </div>  
        <div>
            <label class="min-width-800" asp-for="Description">Description</label>
        <input asp-for="Description" value="@Model.Description" type="text" name="Description" />
        </div> 
        <div>
        <label asp-for="Price"  for="Price">Price</label>
        <input asp-for=Price type="text" value ="@Model.Price" name="Price" />
        </div>
        <input type="submit" name="submit" />
        @Html.AntiForgeryToken();
    </form>
</div>
